<h1>Flights</h1>

<% @flights.each do |flight| %>
  <div id = "<%=flight.number%>">
  <%= "Flight Number: #{flight.number}, Airline: #{flight.airline.name}"%>
  <p>Passengers <p>
  <ul>
  <% flight.passengers.each do |pass|  %>
   <li> <%= pass.name %> 
    <%= form_with url: "/passenger/#{pass.id}/flight/#{flight.id}", method: :destroy, local: true do |form| %>
    <%= form.hidden_field :passenger_id, value:"#{pass.id}" %>
    <%= form.hidden_field :flight_id, value:"#{flight.id}" %>
    <%= form.submit "Remove #{pass.name}" %>
    <%end %>
  <% end %>  
  </ul>
  </div>
<% end %>
